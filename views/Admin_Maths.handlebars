          <!-- ======= Add Section ======= -->
          <section id="AddRec" class="contact" style="background-image: linear-gradient(to right, #25aae1, #40e495, #30dd8a, #2bb673)">
            <div class="container" data-aos="fade-up">
              <div class="section-title">
                <h2>Add Record</h2>
                <p>
                  If you want to add a new record...
                </p>
              </div>

              <div class="row">                
                <div class="col-lg-12 mt-5 mt-lg-0 d-flex align-items-stretch">
                  <form
                    method="post"
                    class="php-email-form"
                    action="/Add_Maths_Rec"
                  >
                    <div class="row">
                      <div class="form-group col-md-6">
                        <label for="Reference_Number">Reference_Number</label>
                        <input
                          type="text"
                          name="Reference_Number"
                          class="form-control"
                          id="name"
                          required
                        />
                      </div>
                      <div class="form-group col-md-6">
                        <label for="Title">Title</label>
                        <input
                          type="text"
                          class="form-control"
                          name="Title"
                          id="email"
                          required
                        />
                      </div>
                      <div class="form-group col-md-6">
                        <label for="Author">Author</label>
                        <input
                          type="text"
                          class="form-control"
                          name="Author"
                          id="subject"
                          required
                        />   
                      </div>             
                      <div class="form-group col-md-6">
                        <label for="Material_Type">Material_Type</label>
                        <select class="form-control" required name="Material_Type">
                          <option value="Other" disabled selected>Select an option...</option> 
                          <option value="Book">Book</option>
                          <option value="Question">Question</option>
                          <option value="Past Paper">Past Paper</option>
                          <option value="Notes">Notes</option>
                          <option value="Model Paper">Model Paper</option>
                          <option value="Other">Other</option>
                        </select>
                      </div>                                    
                    </div>
                    <div class="my-3">
                      <div class="loading">Loading</div>
                      <div class="error-message">Something Went Wrong</div>
                      <div class="sent-message">
                        Your message has been sent. Thank you!
                      </div>
                    </div>
                    <div class="text-center">
                      <button type="submit">ADD</button>
                    </div>                    
                  </form>
                </div>
              </div>
            </div>
          </section>
          <section id="EditRec" class="contact" style="  background-image: linear-gradient(to right, #25aae1, #4481eb, #04befe, #3f86ed)">
            <div class="container" data-aos="fade-up">
              <div class="section-title">
                <h2>Edit Record</h2>
                <p>
                  If you want to edit an existing record...
                </p>
              </div>

              <div class="row">                 
                <div class="col-lg-12 mt-5 mt-lg-0 d-flex align-items-stretch" >
                  <form
                    method="post"
                    role="form"
                    action="/Edit_Maths_Rec"
                    class="php-email-form"
                  >
                     <div class="row">
                      <div class="form-group col-md-12" >
                        <label for="Reference_Number">Reference_Number</label>
                        <input
                          type="text"
                          name="Reference_Number"
                          class="form-control"
                          id="name"
                          required
                          placeholder="Reference_Number of the record you want to edit"
                        />
                      </div>
                      <div class="form-group col-md-6">
                        <label for="Title">Title</label>
                        <input
                          type="text"
                          class="form-control"
                          name="Title"
                          id="email"
                          placeholder="Type if you want to change"
                        />
                      </div>
                      <div class="form-group col-md-6">
                        <label for="Author">Author</label>
                        <input
                          type="text"
                          class="form-control"
                          name="Author"
                          id="subject"
                          placeholder="Type if you want to change"                          
                        />   
                      </div>             
                      <div class="form-group col-md-6">
                        <label for="Material_Type">Material_Type</label>
                        <select class="form-control" name = "Material_Type" required>
                          <option value="Other" disabled selected>select if you want to change</option> 
                          <option value="Book">Book</option>
                          <option value="Question">Question</option>
                          <option value="Past Paper">Past Paper</option>
                          <option value="Notes">Notes</option>
                          <option value="Model Paper">Model Paper</option>
                          <option value="Other">Other</option>
                        </select>
                      </div>                                    
                    </div>
                    <div class="my-3">
                      <div class="loading">Loading</div>
                      <div class="error-message">Something Went Wrong</div>
                      <div class="sent-message">
                        Your message has been sent. Thank you!
                      </div>
                    </div>
                    <div class="text-center">
                      <button type="submit">UPDATE</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </section>
          <section id="DeleteRec" class="contact" style="background-image: linear-gradient(to right, #ff7f7f, #ff5f5f, #ff3f3f, #ff1f1f)">
            <div class="container" data-aos="fade-up">
              <div class="section-title">
                <h2>Delete Record</h2>
                <p>
                  If you want to delete an existing record...
                </p>
              </div>
              
              <div class="row">                 
                <div class="col-lg-12 mt-5 mt-lg-0 d-flex align-items-stretch" >
                  <form
                    method="post"
                    role="form"
                    action="/Delete_Maths_Rec"
                    class="php-email-form"
                  >
                     <div class="row">
                      <div class="form-group col-md-12" >
                        <label for="Reference_Number">Reference_Number</label>
                        <input
                          type="text"
                          name="Reference_Number"
                          class="form-control"
                          id="name"
                          required
                        />
                      </div>                                    
                    </div>
                    <div class="my-3">
                      <div class="loading">Loading</div>
                      <div class="error-message">Something Went Wrong</div>
                      <div class="sent-message">
                        Your message has been sent. Thank you!
                      </div>
                    </div>
                    <div class="text-center">
                      <button type="submit">DELETE</button>
                    </div>
                  </form>
                </div>
              </div>
